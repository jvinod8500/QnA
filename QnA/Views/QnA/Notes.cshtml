
@{
    ViewBag.Title = "Notes";
    Layout = "~/Views/Shared/_NotesLayout.cshtml";
}
<style>
    input{
      width: 100%;
    border: none;
    outline: none;
    border-bottom: groove;
        margin: 2%;
    }
    textarea{
            width: 100%;
    outline: none;
    margin: 2%;
